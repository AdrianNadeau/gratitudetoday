<!DOCTYPE html>
<html lang="en">

<head>
  <!-- head.ejs include -->
  <%- include('partials/head'); %>

</head>

<body id="page-top">
  <% include partials/pre-loader %>
  <!-- Navigation -->
  <% include partials/profile-nav %>


  <!-- Mental Health -->

  <section class="bg-light page-section content">
    <div class="container">
      <div class="row">

        <div class="col-lg-12 text-center">
          <h2 class="section-heading-content">Upload <b>Avatar.</b></h2>
        </div>
        <div class="col-lg-3 text-left">&nbsp;</div>
        <div class="col-lg-6 text-left">
          <div>
            <!-- forms content -->
            
            <div id="validationErrors"></div>
            <div class='alert alert-danger text-center'><i class='fas fa-times-circle'></i>&nbsp;Error uploading avatar. Confirm file is selected and file is under 2MB.</div>
            <div id="validationSuccess"></div>
            <div><img class="rounded-circle" id="profile-avatar" style="border: 2px dotted #fff;height:75PX;width:75px;" src="/assets/img/avatars/gratitudetoday-avatar.png"></div>
            <br/>
            
            <form action="/users/account/updateAvatar" method="post" enctype="multipart/form-data">
              <input class="form-control-file" type="file" accept="image/*" name="photo">
              <p>
              Image cannot be larger then 2MB.
              </p>
              <input type="submit" class="btn btn-success navtoTop" value="Upload">

          </form>
          </div>

        </div>
      </div>

  </section>
  <!-- Footer -->
  <% include partials/footer %>

  <%- include('partials/scripts'); %>

  <%- include('partials/cookie-msg'); %>
  
  <script>
    $(document).ready(getData());
  </script>
</body>

</html>



